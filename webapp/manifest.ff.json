{
  "manifest_version": 3,
  "name": "ReadPaper Utils",
  "description": "用来管理ReadPaper的扩展套件",
  "version": "1.7.0",
  "icons": {
    "48": "/assets/icon.png",
    "128": "/assets/icon.png"
  },
  "action": {
    "default_title": "ReadPaper",
    "default_icon": {
      "48": "/assets/icon.png",
      "128": "/assets/icon.png"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "readpaper-utils@mooninsky",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self';"
  },
  "optional_host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "host_permissions": [
    "http://192.168.4.1/*"
  ],
  "permissions": [
    "tabs",
    "storage"
  ]
}